<h1>Your Orders</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
  <tr>
    <th>Order ID</th>
    <th>Package</th>
    <th>Price</th>
    <th>Status</th>
    <th>Created At</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.package.name %></td>
      <td><%= number_to_currency(order.package.price_dollars) %></td>
      <td><%= order.status %></td>
      <td><%= order.created_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>
